.patient-list{
  width:100%;
  min-height:100vh;
  background:#fff;
}
.inp-search{
  width:100%;
  padding:20rpx 32rpx;
}
.inp-search>input{
  height:72rpx;
  border-radius:36rpx;
  background-color:#fff;
  padding-left:84rpx;
  font-size:14px;
  color:#B0B4B9;
  background-repeat: no-repeat;
  background-position: 32rpx 20rpx;
  box-shadow:0px 2px 8px rgba(0,0,0,0.08);
}
.patient-list .list{
  padding:0 32rpx;
}
.patient-list .list-item{
  margin-bottom:2rpx;
}
.patient-list .list-item,.patient-list .list-item>view>view{
  height:116rpx;
}
.patient-list .list-item>view{
  width:570rpx;
}
.patient-list .list-item image{
  width:92rpx;
  height:92rpx;
  border-radius: 50%;
}