.content{
  padding:40rpx 32rpx;
  background:#fff;
  width:100%;
  box-sizing: border-box;
}
.content-item{
  display:flex;
  justify-content: space-between;
  height:140rpx;
  /* width:100%; */
  box-sizing: border-box;
  background:#fff;
  border-radius:40rpx;
  align-items: center;
  padding:0 40rpx;
  border:1px solid #f5f6f6;
  margin-top:40rpx;
}
.content-item:first-child{
  margin-top:0;
}
.content-item>image{
  width:24rpx;
  height:24rpx;
}
.content-item-content>view{
  font-size:40rpx;
  color:#24262E;
  margin-left:24rpx;
}
.content-item-content{
  display:flex;
  align-items: center;
}
.content-item-content>image{
  width:52rpx;
  height:52rpx;
}
.news{
  padding:14rpx 32rpx;
  position: absolute;
  top:20rpx;
  left:32rpx;
  background:rgba(244, 248, 250, 0.4);
  border-radius:12rpx;
  width:686rpx;
  box-sizing: border-box;
  text-overflow: -o-ellipsis-lastline;/*css3中webkit内核提供的一个方法类似ellipsis*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;/*自适应盒子*/
  -webkit-line-clamp: 1;/*此处为1行,如果是两行就改成2*/
  line-clamp: 1;
  white-space:nowrap;
  -webkit-box-orient: vertical;
  word-break: break-all;/*允许在单词内换行 */
  color:#24262E;
  font-size: 14px;
}