.bank-card{
  width:100%;
  height:100vh;
  background:#fff;
  padding:40rpx 32rpx;
}
.bank-card .card,.bank-card .no-card{
  width:686rpx;
  height:280rpx;
  opacity:1;
  border-radius:32rpx;
  padding:36rpx 50rpx;
}
.bank-card .card{
  background:rgba(238,81,81,1);
}
.bank-card .no-card{
  background:rgba(17,26,44,0.04);
  display:table-cell;
  vertical-align: middle;
  text-align: center;
}
.bank-card .no-card image{
  width:64rpx;
  height:64rpx;
}
.bank-card .card image{
  width:52rpx;
  height:52rpx;
}
.bank-card .card>view:last-child{
  margin-left:80rpx;
  margin-top:40rpx;
  height:76rpx;
  font-size: 24px;
  font-weight: bold;
  font-family:DINPro;
}