.change-password{
  width:100%;
  height:100vh;
  background:#f8f8f8;
}
.change-password .title{
  font-size: 20px;
  padding-top:72rpx;
}
.input{
  width: 100%;
  display: flex;
  margin: auto;
  padding:0 110rpx;
  margin-top:120rpx;
}
.inputText{
  width: 72rpx;
  height: 100rpx;
  border-bottom: 2px solid rgba(17, 26, 44, 0.3);
  padding:12rpx;
  text-align: center;
  margin-right:20rpx;
}
.inputText:last-child{
  margin-right: 0;
}
.inputnum{
  position: absolute;
  border: 1px solid;
  width: 100%;
  top: 0;
  opacity: 0;
  z-index: 11;
}
