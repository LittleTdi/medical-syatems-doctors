.personal-data{
  width:100%;
  height:100vh;
  background:#fff;
  padding:0 32rpx;
  position:relative;
}
.personal-data>view{
  height:88rpx;
}
.personal-data>view:last-child{
  height:224rpx;
}
.personal-avatar{
  height:112rpx;
}
.personal-avatar .avatar{
  width:72rpx;
  height:72rpx;
  border-radius: 50%;
  overflow: hidden;
}
.personal-data>view{
  margin-bottom:2rpx;
}
/* 未选中样式 */
radio .wx-radio-input{ 
  /* 自定义样式.... */
    height: 32rpx; 
    width: 32rpx;
    margin-top: -4rpx;
    border-radius: 50%;
    border: 2rpx solid #999;
    background: transparent;
 }
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked{
   border: none;
   background:#4CAF50;
}
/* 选中后圈圈大小 */
radio .wx-radio-input.wx-radio-input-checked{
  width:32rpx;
  height:32rpx;
}
.personal-data .upload image{
  width:60rpx;
  height:60rpx;
}
.personal-data .upload>view:last-child{
  width:120rpx;
  height:120rpx;
  padding:30rpx;
  border:1px solid rgba(0,0,0,0.05);
}
.personal-data .submit{
  width:686rpx;
  height:96rpx;
  background:rgba(76,175,80,1);
  opacity:1;
  border-radius:32rpx;
  position:absolute;
  line-height: 2;
  left:32rpx;
  bottom:32rpx;
}