.mine{
  position:relative;
  height:100vh;
  background:#fff;
}
.mine .bg{
  height:397.04rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  padding-top:18rpx;
}
.avatar{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin:0 auto 12rpx auto;
}
.mine .card{
  width:686rpx;
  height:144rpx;
  background:#fff;
  box-shadow:0px 2px 8px rgba(0,0,0,0.08);
  opacity:1;
  border-radius:20rpx;
  position:absolute;
  left:32rpx;
  top:328rpx;
  padding:26rpx 0;
  box-sizing: border-box;
}
.mine .card>view{
  width:342rpx;
  height:100%;
}
.mine .card>view:first-child{
  border-right:1px solid rgba(17,26,44,0.1);
}
.mine .content{
  padding-top:74rpx;
  background:#fff;
}
.mine .content>view{
  width:100%;
  padding:0 32rpx;
  background:#fff;
  height:88rpx;
}
.mine .content>view image{
  width:32rpx;
  height:32rpx;
}