.certification{
  width:100%;
  height:100vh;
  background:#fff;
  position: relative;
}
.certification>view:first-child{
  padding:40rpx 32rpx;
}
.certification .upload{
  height:502rpx;
  width:100%;
}
.certification .upload>view{
  width:120rpx;
  height:120rpx;
  border:1px solid #B7B9BF;
  border-radius: 12rpx;
  text-align: center;
}
.certification .upload>view image{
  width:60rpx;
  height:60rpx;
  margin-top:29rpx;
}
.certification>.keep{
  width:686rpx;
  height:96rpx;
  opacity:1;
  border-radius:32rpx;
  position: absolute;
  bottom:32rpx;
  left:32rpx;
  line-height: 2.5;
}