/**app.wxss**/
@import "colorui/main.wxss";
@import "colorui/icon.wxss";
@import "weui.wxss";
.text-name{
  font-size:16px;
  font-weight: bold;
}
.text-xs{
  font-size: 10px;
}
.text-sm{
  font-size: 12px;
}
.text-md{
  font-size:14px;
}
.text-lg{
  font-size: 16px;
}
.text-xl{
  font-size: 18px;
}
.text-xxl{
  font-size: 20px;
}
.text-bold{
  font-weight: bold;
}
.text-center{
  text-align: center;
}
.text-left{
  text-align: left;
}
.text-right{
  text-align: right;
}
.text-normal{
  color:#111A2C;
}
.text-light{
  color:rgba(17, 26, 44, 0.9);
}
.text-lighter{
  color:rgba(17, 26, 44, 0.6);
}
.text-xlighter{
  color:rgba(17, 26, 44, 0.3);
}
.text-dark{
  color:#24262E;
}
view,text{
  color:#24262E;
}
.text-red{
  color:#FF5757;
}
.text-green{
  color:#4CAF50;
}
.text-yellow{
  color:#FFCB3B;
}
.d-flex{
  display: flex;
  align-items: center;
}
.flex-center{
  justify-content: center;
}
.padding-lr{
  padding-left:32rpx;
  padding-right:32rpx;
}
.flex-between{
  justify-content: space-between;
}
.flex-around{
  justify-content: space-around;
}
.flex-end{
  justify-content: flex-end;
}
.align-baseline{
  align-items: baseline;
}
.align-end{
  align-items: flex-end;
}
.align-start{
  align-items: flex-start;
}
.flex-column{
  display: flex;
  flex-direction: column;
}
.to{
  width:24rpx;
  height:24rpx;
}
.border-bottom{
  border-bottom:solid 1px rgba(17, 26, 44, 0.06); 
}
.border-green{
  border:1px solid #4CAF50;
}
.bg-white{
  background:#fff;
}

.text-white{
  color:fff;
}
.blank{
  padding-top:404rpx;
  color:rgba(17, 26, 44, 0.3);
  background:#fff;
  width:100%;
  height:100vh;
}
.tag{
  width:14px;
  height:16px;
  background:rgba(255,87,87,1);
  opacity:1;
  border-radius:7px;
  color:#fff;
  font-size: 10px;
  text-align: center;
  padding-top:6rpx;
  line-height: 1.2;
}
.dot{
  width:20rpx;
  height:20rpx;
  border:1px solid rgba(32,40,42,0.2980392156862745);
  border-radius:50%;
  opacity:1;
}
.dot-active{
  width:20rpx;
  height:20rpx;
  background:rgba(76,175,80,1);
  border-radius:50%;
  opacity:1;
}
.star{
  width:32rpx;
  height:32rpx;
}
switch::after, switch::before{
  content:'';
}
switch::before{
  content:'';
}
.item-to{
  width:12px;
  height:12px;
}
.inp-search{
  width:100%;
  padding:20rpx 32rpx;
}
.inp-search>input{
  height:72rpx;
  border-radius:36rpx;
  background-color:#fff;
  padding-left:84rpx;
  font-size:14px;
  color:#B0B4B9;
  background-repeat: no-repeat;
  background-position: 32rpx 20rpx;
  box-shadow:0px 2px 8px rgba(0,0,0,0.08);
}
.text-gray{
  color:#B0B4B9;
}
.normal-height{
  height:88rpx;
}
.padding-lr{
  padding:0 32rpx;
}
.keep{
  position:absolute;
  left:32rpx;
  bottom:32rpx;
  width:686rpx;
  height:96rpx;
  line-height: 3;
  border-radius: 32rpx;
}
.keep-disabled{
  background:rgba(76, 175, 80, 0.5);
}
view.keep{
  position:absolute;
  bottom:32rpx;
}
view.keep>button{
  border-radius: 32rpx;
  width:100%;
  height:96rpx;
  line-height: 2;
}